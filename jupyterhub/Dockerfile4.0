FROM jupyterhub/jupyterhub:4.0.0
# docker pull jupyterhub/jupyterhub:4.0.0 --platform linux/amd64
# https://hub.docker.com/r/jupyterhub/jupyterhub


# pkgs
RUN python3 -m pip install --upgrade --no-cache pip && \
    python3 -m pip install --no-cache \
       jupyter_client \
       dockerspawner \
       jupyterhub-idle-culler &&\
    rm -rf /tmp/*


# nativeauthenticator
# https://github.com/jupyterhub/nativeauthenticator
COPY nativeauthenticator /tmp/nativeauthenticator
# RUN apt-get update &&\
#    apt-get install -y git &&\
#    git clone https://github.com/jupyterhub/nativeauthenticator.git /tmp &&\
RUN pip install -e /tmp/nativeauthenticator/. 


# config -----------------------------------------------------------------#
USER root
RUN mkdir -p /srv/jupyterhub/ &&\
    mkdir -p /etc/jupyterhub/ &&\ 
    mkdir -p /var/log/ 
WORKDIR /srv/jupyterhub

COPY ./jupyterhub_config.py /etc/jupyterhub/jupyterhub_config.py
CMD ["jupyterhub", "-f", "/etc/jupyterhub/jupyterhub_config.py"]

